# --- roles/prometheus/templates/docker-compose-prometheus.yml.j2 ---
# ========================================
# PROMETHEUS DOCKER COMPOSE
# ========================================
#version: '3.8'

services:
  {{ prometheus_container_name }}:
    image: "{{ prometheus_image }}"
    container_name: "{{ prometheus_container_name }}"
    
    # Параметры запуска
    command:
      # Путь к конфигу
      - '--config.file=/etc/prometheus/prometheus.yml'
      # Директория хранения данных
      - '--storage.tsdb.path=/prometheus'
      # Сколько хранить данные
      - '--storage.tsdb.retention.time={{ prometheus_retention_time }}'
      # Максимальный размер данных
      - '--storage.tsdb.retention.size={{ prometheus_retention_size }}'
      # Включить hot reload конфига через POST /-/reload
      - '--web.enable-lifecycle'
      # Консоли (веб-интерфейс)
      - '--web.console.libraries=/usr/share/prometheus/console_libraries'
      - '--web.console.templates=/usr/share/prometheus/consoles'
    
    ports:
      - "{{ prometheus_port }}:9090"
    
    volumes:
      # Конфиг Prometheus (read-only)
      - ./prometheus.yml:/etc/prometheus/prometheus.yml:ro
      # Alert rules (read-only)
      - ./alerts:/etc/prometheus/alerts:ro
      # Данные метрик (persistent)
      - {{ prometheus_volume_name }}:/prometheus
{% if prometheus_docker_sd_enabled %}
      # Docker socket для Service Discovery
      - /var/run/docker.sock:/var/run/docker.sock:ro
{% endif %}
    
{% if prometheus_docker_sd_enabled %}
    # Нужно для доступа к docker.sock
    user: root
{% endif %}
    
    # extra_hosts позволяет обращаться к хосту
    extra_hosts:
      - "host.docker.internal:host-gateway"
    
    networks:
      - {{ docker_network_name }}
    
    restart: unless-stopped
    
    healthcheck:
      test: ["CMD", "wget", "--spider", "-q", "http://localhost:9090/-/healthy"]
      interval: 30s
      timeout: 10s
      retries: 3

volumes:
  {{ prometheus_volume_name }}:
    driver: local

networks:
  {{ docker_network_name }}:
    external: true
